<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:photonrover"
             x:Class="photonrover.MainPage">

    <ContentPage.Content>

        <ScrollView>
            <StackLayout>
                <Label Text="Enter your cloud credentials" Margin="20" FontSize="20"  TextColor="White" HorizontalOptions="CenterAndExpand" />
                <Entry x:Name="username" Placeholder="Username" IsPassword="False" WidthRequest="200" HeightRequest="35" Margin="10" HorizontalOptions="CenterAndExpand" />
               
                <Entry x:Name="password" Placeholder="Password" IsPassword="True" WidthRequest="200"  HeightRequest="35" HorizontalOptions="CenterAndExpand"/>
                <Button Text="Login" Clicked="Button_Clicked"  WidthRequest="100" BackgroundColor="Black" TextColor="White"  FontSize="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" BorderColor="White"  BorderRadius = "5" BorderWidth = "2"/>
                <Image Source="https://i0.wp.com/makezine.com/wp-content/uploads/2015/05/particle.png"  HorizontalOptions="CenterAndExpand" />
                <Label TextColor="#00BFFF" HorizontalTextAlignment="Center" VerticalOptions="EndAndExpand" FontSize = "20" Text="photonxam - created by S.Votsis" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
